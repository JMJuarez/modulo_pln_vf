# Auto detect text files and normalize line endings
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# JSON files
*.json text eol=lf

# Markdown
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Configuration files
*.ini text eol=lf
*.toml text eol=lf
*.cfg text eol=lf

# Binary files - embeddings and models
*.npz binary
*.pkl binary
*.bin binary
*.pt binary
*.pth binary
*.onnx binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary

# Archives
*.zip binary
*.tar binary
*.gz binary
